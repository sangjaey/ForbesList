<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="613dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UploadActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:contentDescription="@string/takeSnapShot"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/upload_snapshot"
         />

    <TextView
        android:id="@+id/upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upload_author"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/search_title"
        android:textColor="#0099cc" />

    <TextView
        android:id="@+id/upload_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/upload_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/search_author"
        android:textColor="#0099cc" />

    <EditText
        android:id="@+id/title_u"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/author_u"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="@string/search_title" />
<requestFocus />
    <EditText
        android:id="@+id/author_u"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/upload_author"
        android:layout_alignBottom="@+id/upload_author"
        android:layout_alignLeft="@+id/title_u"
        android:layout_alignRight="@+id/title_u"
        android:ems="10"
        android:hint="@string/search_author" />

    <TextView
        android:id="@+id/upload_snapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="135dp"
        android:text="@string/snap"
        android:textColor="#0099cc" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#0099cc"
        android:text="@string/takeSnapShot"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#0099cc"
        android:text="@string/upload"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/upload_author"
        android:layout_below="@+id/author_u"
        android:layout_marginTop="30dp"
        android:text="@string/search_price"
        android:textColor="#0099cc" />

    <EditText
        android:id="@+id/price_u"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/author_u"
        android:layout_alignRight="@+id/author_u"
        android:ems="10"
        android:hint="@string/search_price" >

        
    </EditText>

</RelativeLayout>
</ScrollView>